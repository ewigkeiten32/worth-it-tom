<div class="p-3 mb-2 bg-primary">

  <div class="card mb-3 mx-auto col-md-4 py-3 shadow-sm rounded">

    <%= simple_form_for @goal do |f| %>
      <h2>Edit <%= @goal.name %></h2>

      <div class="balance">
        <p>Your Balance:</p>
        <p class="dollar">$</p>
        <p id="result">0.00</p>
      </div>
      <%= f.input :amount, label: "How much do you want to save?", :input_html => { id: "amount", class: 'form-style' } %>
      <%= f.input :due_date, id:'goal_due_date', as: :string,label: "When do you want to save it by?", :input_html => {  class: 'form-style' }%>
        <div class="balance">
          <p>Weekly contribution:</p>
          <p class="dollar">$</p>
          <p id="weeks">0.00</p>
      </div>
      <%= f.simple_fields_for :reason, Reason.new do |p| %>
        <%= p.input :description, :input_html => { class: 'form-style'}, label: "Why are you saving for this goal?", placeholder: ["I need to avoid...a mid-life crisis", "I want to people to...be jealous of me", "I strive to be...financially secure"].sample%>
      <% end %>
      <%= f.submit "Yes OK", class: "btn btn-warning"%>
    <% end %>
  </div>
</div>
