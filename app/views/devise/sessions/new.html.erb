<div class="container">

    <h2 class="home_title">Log in</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs form-colour">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email", } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="msf_btn_pack">
       <!--  <%#= f.button :submit, "Log in" %> -->
        <%= f.submit "Log in", class: "submit-btn"%>
      </div>
    <% end %>
      <div class="login_btn_pack">
      <a class="signup-btn-2" type="button" href="/users/sign_up" name="next" value="Sign up">Sign up</a>
  </div>

</div>
